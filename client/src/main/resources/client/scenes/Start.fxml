            <Insets right="10.0" />
         </padding>
         <font>
            <Font size="14.0" />
         </font></TextField>
      <Button fx:id="buttonCreate" layoutX="231.0" layoutY="84.0" mnemonicParsing="false" onAction="#createEvent" prefHeight="27.0" prefWidth="66.0" style="-fx-border-style: hidden hidden hidden solid;" styleClass="start-form" text="start.button_new">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label fx:id="joinEvent" layoutX="58.0" layoutY="129.0" text="start.join_event">
         <font>
            <Font size="17.0" />
         </font>
      </Label>
      <TextField fx:id="joinEventField" layoutX="58.0" layoutY="160.0" prefHeight="30.0" prefWidth="179.0" style="-fx-border-color: #202020;" styleClass="start-form">
