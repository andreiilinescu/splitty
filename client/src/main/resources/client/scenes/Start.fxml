            <Image url="@/client/icons/settings.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <ImageView fitHeight="29.0" fitWidth="23.0" layoutX="45.0" layoutY="10.0" onMouseClicked="#shortCuts" pickOnBounds="true" preserveRatio="true">
